doctype html
html
  head
    title= title
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="/css/style.css")
  body
    .container
      h1 Pets Homepage
      a(href="/update-cobj") Add to this table
      if data.length
        table
          thead
            tr
              th Pet Name
              th Pet Type
              th Pet Age
          tbody
            each pet in data
              tr
                td= pet.properties.pet_name
                td= pet.properties.pet_type
                td= pet.properties.pet_age
      else
        p No pets found.
